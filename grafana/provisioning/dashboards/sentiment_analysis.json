{
  "dashboard": {
    "id": null,
    "title": "Sentiment Analysis",
    "tags": ["sentiment", "social", "news"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Overall Sentiment Score",
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "rawSql": "SELECT AVG(overall_sentiment) as avg_sentiment FROM marts.mart_sentiment_analysis",
            "format": "table"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "decimals": 2,
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "orange", "value": -0.2 },
                { "color": "green", "value": 0.2 }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Bullish Sentiment",
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "rawSql": "SELECT COUNT(*) as bullish_count FROM marts.mart_sentiment_analysis WHERE hourly_sentiment_classification = 'Bullish'",
            "format": "table"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "decimals": 0,
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [{ "color": "green", "value": null }]
            }
          }
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Bearish Sentiment",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "rawSql": "SELECT COUNT(*) as bearish_count FROM marts.mart_sentiment_analysis WHERE hourly_sentiment_classification = 'Bearish'",
            "format": "table"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "decimals": 0,
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [{ "color": "red", "value": null }]
            }
          }
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Sentiment Volatility",
        "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "rawSql": "SELECT AVG(sentiment_volatility) as avg_volatility FROM marts.mart_sentiment_analysis",
            "format": "table"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "decimals": 2,
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "orange", "value": 0.3 },
                { "color": "red", "value": 0.6 }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "type": "graph",
        "title": "Sentiment Score Over Time",
        "gridPos": { "x": 0, "y": 4, "w": 24, "h": 8 },
        "targets": [
          {
            "rawSql": "SELECT timestamp as time, symbol, overall_sentiment FROM marts.mart_sentiment_analysis WHERE timestamp >= NOW() - INTERVAL '7 days' ORDER BY timestamp",
            "format": "time_series"
          }
        ],
        "options": {
          "legend": {
            "show": true,
            "position": "bottom"
          },
          "tooltip": {
            "mode": "multi"
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "decimals": 2
          }
        }
      },
      {
        "id": 6,
        "type": "bargauge",
        "title": "Sentiment Distribution",
        "gridPos": { "x": 0, "y": 12, "w": 24, "h": 4 },
        "targets": [
          {
            "rawSql": "SELECT hourly_sentiment_classification as sentiment, COUNT(*) as count FROM marts.mart_sentiment_analysis GROUP BY hourly_sentiment_classification",
            "format": "table"
          }
        ],
        "options": {
          "displayMode": "gradient",
          "orientation": "horizontal",
          "reduceOptions": {
            "values": true,
            "calcs": []
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "decimals": 0,
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "orange", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "type": "table",
        "title": "Latest Sentiment Analysis",
        "gridPos": { "x": 0, "y": 16, "w": 24, "h": 8 },
        "targets": [
          {
            "rawSql": "SELECT symbol, timestamp, social_sentiment, news_sentiment, overall_sentiment, hourly_sentiment_classification, sentiment_volatility, sentiment_strength FROM marts.mart_sentiment_analysis ORDER BY timestamp DESC LIMIT 50",
            "format": "table"
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [{ "id": "timestamp", "desc": true }]
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto"
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "overall_sentiment" },
              "properties": [
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      { "color": "red", "value": null },
                      { "color": "orange", "value": -0.2 },
                      { "color": "green", "value": 0.2 }
                    ]
                  }
                }
              ]
            },
            {
              "matcher": { "id": "byName", "options": "sentiment_volatility" },
              "properties": [
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      { "color": "green", "value": null },
                      { "color": "orange", "value": 0.3 },
                      { "color": "red", "value": 0.6 }
                    ]
                  }
                }
              ]
            }
          ]
        }
      }
    ],
    "time": {
      "from": "now-7d",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ]
    }
  }
}
