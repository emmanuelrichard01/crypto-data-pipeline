[flake8]
# Match Black's defaults
max-line-length = 127

# Ignore rules that conflict with Black or are too noisy
extend-ignore = E203, W503, F401, F841

# Exclude autogenerated, vendored, or irrelevant files
exclude =
    .git,
    __pycache__,
    build,
    dist,
    venv,
    .venv,
    env,
    .env,
    alembic/versions,
    dbt,
    tests

# Show errors with context
show-source = true
statistics = true
